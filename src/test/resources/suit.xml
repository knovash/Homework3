<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<!--главный тег suite. name просто имя сьюта-->
<suite name="Verify ..." parallel="classes" thread-count="2" data-provider-thread-count="5">
    <!--        можно паралелить методы, классы, инстансы, тесты сьюта-->
    <!--        tests, metods, classes, instances-->
<!--    дата провайдер каунт во сколько потоков может выполняться один тест с дата провайдером-->
<!--    тогда в дата провайдере в классе надо пометить parallel = true-->

    <!--    внутри сьюта множество тестов. это не тестовые методы. это единицы сьюта которая группирует методы тестов-->
    <!--    если в классе теста есть BeforeTest то тут он выполнится перед тестом-->
    <!--    надо различать BeforMethod и BeforeTest, BeforeClass-->
    <!--    метод это в классе-->
    <!--    а тест это в сьюте-->
    <test name="Test 1">
        <!--        <parameter name="emailid" value="tester456@gmail.com"/>-->
        <!--        <parameter name="password" value="test@123"/>-->
        <classes>
            <!--            <class name="practiceTests.testParameters"/>-->
            <class name="org.itacademy.homework3.SearchTest"/>

        </classes>
    </test> <!-- Test -->

    <test name="Test 3">
        <!--        <parameter name="emailid" value="tester456@gmail.com"/>-->
        <!--        <parameter name="password" value="test@123"/>-->
        <classes>
            <!--            <class name="practiceTests.testParameters"/>-->
            <class name="org.itacademy.homework3.SearchTest">

                <!--                методы которые надо выполнить из этого тест класса-->
                <!--                или все методы кроме exclude-->
                <methods>
                    <include name="verifySearchTest"/>
                    <include name="verifySearchTest"/>
                    <exclude name="verifySearchTest"/>
                </methods>
            </class>
        </classes>
    </test> <!-- Test -->

    <!--    если в классе теста есть BeforeTest то тут он выполнится перед тестом-->
    <test name="Test 2">
        <parameter name="emailid" value="tester789@gmail.com"/>
        <classes>
            <!--            если в классе теста есть BeforeClass то тут он выполнится перед классом-->
            <class name="org.itacademy.homework3.SearchTestBurger"/>
            <!--            если в классе теста есть BeforeClass то тут он выполнится перед классом-->
            <class name="org.itacademy.homework3.SearchTestDoner"/>
            <class name="org.itacademy.homework3.SearchTestAqualang"/>
            <class name="org.itacademy.homework3.SearchTestPonchik"/>
        </classes>

    </test> <!-- Test -->
</suite> <!-- Suite -->